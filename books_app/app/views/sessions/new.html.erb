<h1>Log In</h1>

<% if flash[:notice] %>
<p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>
<% if flash[:error_message]%>
<p class="alert alert-danger"><%= flash[:error_message] %></p>
<% end %>
<%= form_with(url: sessions_path) do %>
    <%=label_tag :name %>
    <%=text_field_tag :name %>
    <%=label_tag :password %>
    <%=password_field_tag :password %>
    <%=submit_tag "Log in" %>
<% end %>